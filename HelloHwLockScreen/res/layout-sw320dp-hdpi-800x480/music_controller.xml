<?xml version="1.0" encoding="utf-8"?>
<com.huawei.android.potterunlock.MusicController xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bar"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:gravity="top|center"
        android:singleLine="true"
        android:text="@string/unknown"
        android:textColor="#ffffffff"
        android:textSize="14.0dip" />

    <TextView
        android:id="@id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0.0dip"
        android:gravity="top|center"
        android:singleLine="true"
        android:text="@string/unknown"
        android:textColor="#ffffffff"
        android:textSize="12.0dip" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@id/cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120.0dip"
            android:layout_marginTop="0.0dip"
            android:orientation="horizontal" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/shadow" >

                <ImageView
                    android:id="@id/trackcover"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0.0dip"
                    android:clickable="false"
                    android:src="@drawable/trackcover" />
            </FrameLayout>

            <ImageView
                android:id="@id/cdcover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-5.0dip"
                android:layout_marginTop="0.0dip"
                android:clickable="false"
                android:src="@drawable/cd" />
        </LinearLayout>

        <ImageView
            android:id="@id/before_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cover"
            android:layout_marginLeft="36.0dip"
            android:src="@drawable/music_before" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress"
            android:layout_marginTop="40.0dip"
            android:paddingLeft="35.0dip"
            android:paddingRight="35.0dip" >

            <ImageView
                android:id="@id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:src="@drawable/music_pre" />

            <ImageView
                android:id="@id/playorpause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/music_play" />

            <ImageView
                android:id="@id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:src="@drawable/music_next" />
        </RelativeLayout>
    </RelativeLayout>

</com.huawei.android.potterunlock.MusicController>